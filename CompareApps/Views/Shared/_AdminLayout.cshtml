<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - CompareApps</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
   
    </head>
    <body>
        <header>
            <div id="header">
                <div  class="float-left">

                    <a href="/">
                        <img src="/Images/logo_ca.png" alt="" /></a>

                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                 
                </div>
            </div>
        </header>
       <div id="body" style="width:100%;">
      <section style="margin-top:2%;width:15%;margin-right:85%;">
          
         @RenderSection("LeftSideBar", false)

      </section>
            <section style ="background-color:#BCBFC2;border: 1px solid #e3e3e3;width:83.8%;float:left;margin-left:16%;margin-top:-34.2%">
               
                @RenderBody()
                 
            </section>
        </div>
        
           
               <div class="footer">
         <div class="footerInner">
                <div id="footerLeft">
                    Copyright © 2014 CompareApps .</div>
               <div id="footerRight">
                    <a style="color:White !important;" class="footerLink" href="http://www.cynoteck.com">Web Design</a> and <a  style="color:White !important;" class="footerLink" href="http://www.cynoteck.com">Development</a> by <a  style="color:White !important;" class="footerLink" href="http://www.cynoteck.com">Cynoteck
                        </a>.</div>
            </div>
    </div>
          

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
